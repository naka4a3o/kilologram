<div class="contents row">
<p id="notice"><%= notice %></p>

<table>
  <thead>
    <tr>
      <%# <th>タイトル</th> %>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @calendars.each do |calendar| %>
      <tr>
        <td><h1><%= calendar.weight %>kg</h1></td>
        <td><%= calendar.start_time.strftime("%Y-%m-%d %H:%M") %></td>
        <%# <td><%= link_to 'Show', user_calendar_path(calendar.id, user_id: current_user.id) %></td> 
        <td><%= link_to '< Edit >', edit_user_calendar_path(calendar.id, user_id: current_user.id) %></td>
        <td><%= link_to '< Destroy >',user_calendar_path(calendar.id, user_id: current_user.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<h2><%= link_to '[ 記録する ]', new_user_calendar_path %></h2>

<%= month_calendar events: @calendars do |date, calendars| %>
  <%= date.day %>

  <% calendars.each do |calendar| %>
    <div>
      <%= link_to calendar.weight, user_calendar_path(calendar.id, user_id: current_user.id), method: :get %>
    </div>
  <% end %>
<% end %>
</div>
